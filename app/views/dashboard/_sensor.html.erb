<div class="card sensor-card" id="<%= sensor.hostname %>">

  <%= link_to "javascript:void(0);", class: 'close-card' do %>
    <span class="fa fa-times"></span>
  <% end %>

  <h4 class="card-header"><%= sensor.hostname %></h4>
  <ul class="temperature-info">
    <%= render partial: 'sensor_value', locals: {sensor: sensor, field_names: field_names(sensor) } %>
  </ul>
  <div class="card-block">
    <p class="card-text"><%= sensor.description %></p>
  </div>
  <div class="card-footer">
    <small class="text-muted time_ago"><%= format_time(sensor.updated_at) %> </small>
    <small class="text-muted time_ago"><%= time_ago_in_words(sensor.updated_at)%> ago</small>
  </div>
</div>